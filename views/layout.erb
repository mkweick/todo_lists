<!doctype html>
<html lang="en-US">
  <head>
    <title>Todo App</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
    <script src="/javascripts/jquery-2.2.0.js"></script>
    <script src="/javascripts/application.js"></script>
  </head>
  <body>
    <header>
      <h1>Todo Tracker</h1>
      <div class="actions">
        <%== yield_content :header_links %>
      </div>
    </header>
    <main>
      <% if session[:flash].any? %>
        <% msg = session[:flash].delete_at(0) %>
        <div class="<%= flash_message_type(msg[:type]) %>">
          <p><%= msg[:text] %></p>
        </div>
      <% end %>
      <%== yield %>
    </main>
  </body>
</html>