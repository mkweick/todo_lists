<% if @lists.none? %>
  <div id="no_list">
    <h4>You have no lists, create one!</h4>
  </div>
<% end %>

<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= idx + 1 %>">
        <h2><%= list[:name] %></h2>
        <p><%= "#{todos_completed(list)}/#{list[:todos].size}" %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/lists/new" class="add">New List</a>
<% end %>